# profile environment
FROM openjdk:17-alpine

VOLUME ["/app_log/github-action-dev"]
LABEL project="github-action-dev"

ADD api/build/libs/github-action-dev.jar github-action-dev.jar
EXPOSE 8080
RUN sh -c 'touch /github-action-dev.jar'
ENV JAVA_OPTS="-Dspring.profiles.active=dev"
ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar /github-action-dev.jar"]